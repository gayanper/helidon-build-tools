<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>io.helidon.ide-support.lsp</groupId>
        <artifactId>helidon-lsp-project</artifactId>
        <version>3.0.4-SNAPSHOT</version>
    </parent>

    <artifactId>helidon-lsp-server</artifactId>
    <name>Helidon language server</name>

    <properties>
        <maven.compiler.release>17</maven.compiler.release>
        <version.test.lib>3.0.2</version.test.lib>
    </properties>

    <dependencies>
        <dependency>
            <groupId>io.helidon.build-tools.cli</groupId>
            <artifactId>helidon-cli-impl</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>io.helidon.build-tools.archetype</groupId>
            <artifactId>helidon-archetype-engine-v2-json</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>io.helidon.ide-support.lsp</groupId>
            <artifactId>helidon-lsp-common</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.glassfish</groupId>
            <artifactId>javax.json</artifactId>
        </dependency>
        <dependency>
            <groupId>io.helidon.build-tools.common</groupId>
            <artifactId>helidon-build-common-maven</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.junit.jupiter</groupId>
            <artifactId>junit-jupiter-api</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.mockito</groupId>
            <artifactId>mockito-junit-jupiter</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.mockito</groupId>
            <artifactId>mockito-core</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.hamcrest</groupId>
            <artifactId>hamcrest-all</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <excludes>
                    <exclude>logging.properties</exclude>
                </excludes>
            </resource>
        </resources>

        <plugins>
            <plugin>
                <artifactId>maven-resources-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy-resource</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${basedir}/target</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>src/main/resources</directory>
                                    <includes>
                                        <include>logging.properties</include>
                                    </includes>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-assembly-plugin</artifactId>
                <configuration>
                    <archive>
                        <manifest>
                            <mainClass>io.helidon.lsp.server.HelidonLSPLauncher</mainClass>
                        </manifest>
                    </archive>
                    <descriptorRefs>
                        <descriptorRef>jar-with-dependencies</descriptorRef>
                    </descriptorRefs>
                    <finalName>${project.artifactId}</finalName>
                    <appendAssemblyId>false</appendAssemblyId>
                </configuration>
                <executions>
                    <execution>
                        <id>make-assembly</id>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>unpack-tests-resources</id>
                        <phase>process-test-resources</phase>
                        <goals>
                            <goal>unpack</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>io.helidon.common</groupId>
                                    <artifactId>helidon-common-configurable</artifactId>
                                    <version>${version.test.lib}</version>
                                    <includes>**/config-metadata.json</includes>
                                    <fileMappers>
                                        <org.codehaus.plexus.components.io.filemappers.FlattenFileMapper/>
                                        <org.codehaus.plexus.components.io.filemappers.PrefixFileMapper>
                                            <prefix>helidon-common-configurable.</prefix>
                                        </org.codehaus.plexus.components.io.filemappers.PrefixFileMapper>
                                    </fileMappers>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>io.helidon.security</groupId>
                                    <artifactId>helidon-security</artifactId>
                                    <version>${version.test.lib}</version>
                                    <includes>**/config-metadata.json</includes>
                                    <fileMappers>
                                        <org.codehaus.plexus.components.io.filemappers.FlattenFileMapper/>
                                        <org.codehaus.plexus.components.io.filemappers.PrefixFileMapper>
                                            <prefix>helidon-security.</prefix>
                                        </org.codehaus.plexus.components.io.filemappers.PrefixFileMapper>
                                    </fileMappers>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>io.helidon.media</groupId>
                                    <artifactId>helidon-media-common</artifactId>
                                    <version>${version.test.lib}</version>
                                    <includes>**/config-metadata.json</includes>
                                    <fileMappers>
                                        <org.codehaus.plexus.components.io.filemappers.FlattenFileMapper/>
                                        <org.codehaus.plexus.components.io.filemappers.PrefixFileMapper>
                                            <prefix>helidon-media-common.</prefix>
                                        </org.codehaus.plexus.components.io.filemappers.PrefixFileMapper>
                                    </fileMappers>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>io.helidon.common</groupId>
                                    <artifactId>helidon-common-key-util</artifactId>
                                    <version>${version.test.lib}</version>
                                    <includes>**/config-metadata.json</includes>
                                    <fileMappers>
                                        <org.codehaus.plexus.components.io.filemappers.FlattenFileMapper/>
                                        <org.codehaus.plexus.components.io.filemappers.PrefixFileMapper>
                                            <prefix>helidon-common-key-util.</prefix>
                                        </org.codehaus.plexus.components.io.filemappers.PrefixFileMapper>
                                    </fileMappers>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>io.helidon.security</groupId>
                                    <artifactId>helidon-security-util</artifactId>
                                    <version>${version.test.lib}</version>
                                    <includes>**/config-metadata.json</includes>
                                    <fileMappers>
                                        <org.codehaus.plexus.components.io.filemappers.FlattenFileMapper/>
                                        <org.codehaus.plexus.components.io.filemappers.PrefixFileMapper>
                                            <prefix>helidon-security-util.</prefix>
                                        </org.codehaus.plexus.components.io.filemappers.PrefixFileMapper>
                                    </fileMappers>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>io.helidon.security.providers</groupId>
                                    <artifactId>helidon-security-providers-oidc</artifactId>
                                    <version>${version.test.lib}</version>
                                    <includes>**/config-metadata.json</includes>
                                    <fileMappers>
                                        <org.codehaus.plexus.components.io.filemappers.FlattenFileMapper/>
                                        <org.codehaus.plexus.components.io.filemappers.PrefixFileMapper>
                                            <prefix>helidon-security-providers-oidc.</prefix>
                                        </org.codehaus.plexus.components.io.filemappers.PrefixFileMapper>
                                    </fileMappers>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>io.helidon.security.providers</groupId>
                                    <artifactId>helidon-security-providers-oidc-common</artifactId>
                                    <version>${version.test.lib}</version>
                                    <includes>**/config-metadata.json</includes>
                                    <fileMappers>
                                        <org.codehaus.plexus.components.io.filemappers.FlattenFileMapper/>
                                        <org.codehaus.plexus.components.io.filemappers.PrefixFileMapper>
                                            <prefix>helidon-security-providers-oidc-common.</prefix>
                                        </org.codehaus.plexus.components.io.filemappers.PrefixFileMapper>
                                    </fileMappers>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>io.helidon.security.providers</groupId>
                                    <artifactId>helidon-security-providers-http-auth</artifactId>
                                    <version>${version.test.lib}</version>
                                    <includes>**/config-metadata.json</includes>
                                    <fileMappers>
                                        <org.codehaus.plexus.components.io.filemappers.FlattenFileMapper/>
                                        <org.codehaus.plexus.components.io.filemappers.PrefixFileMapper>
                                            <prefix>helidon-security-providers-http-auth.</prefix>
                                        </org.codehaus.plexus.components.io.filemappers.PrefixFileMapper>
                                    </fileMappers>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>io.helidon.security.providers</groupId>
                                    <artifactId>helidon-security-providers-common</artifactId>
                                    <version>${version.test.lib}</version>
                                    <includes>**/config-metadata.json</includes>
                                    <fileMappers>
                                        <org.codehaus.plexus.components.io.filemappers.FlattenFileMapper/>
                                        <org.codehaus.plexus.components.io.filemappers.PrefixFileMapper>
                                            <prefix>helidon-security-providers-common.</prefix>
                                        </org.codehaus.plexus.components.io.filemappers.PrefixFileMapper>
                                    </fileMappers>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>io.helidon.security.providers</groupId>
                                    <artifactId>helidon-security-providers-abac</artifactId>
                                    <version>${version.test.lib}</version>
                                    <includes>**/config-metadata.json</includes>
                                    <fileMappers>
                                        <org.codehaus.plexus.components.io.filemappers.FlattenFileMapper/>
                                        <org.codehaus.plexus.components.io.filemappers.PrefixFileMapper>
                                            <prefix>helidon-security-providers-abac.</prefix>
                                        </org.codehaus.plexus.components.io.filemappers.PrefixFileMapper>
                                    </fileMappers>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>io.helidon.tracing</groupId>
                                    <artifactId>helidon-tracing</artifactId>
                                    <version>${version.test.lib}</version>
                                    <includes>**/config-metadata.json</includes>
                                    <fileMappers>
                                        <org.codehaus.plexus.components.io.filemappers.FlattenFileMapper/>
                                        <org.codehaus.plexus.components.io.filemappers.PrefixFileMapper>
                                            <prefix>helidon-tracing.</prefix>
                                        </org.codehaus.plexus.components.io.filemappers.PrefixFileMapper>
                                    </fileMappers>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>io.helidon.webclient</groupId>
                                    <artifactId>helidon-webclient</artifactId>
                                    <version>${version.test.lib}</version>
                                    <includes>**/config-metadata.json</includes>
                                    <fileMappers>
                                        <org.codehaus.plexus.components.io.filemappers.FlattenFileMapper/>
                                        <org.codehaus.plexus.components.io.filemappers.PrefixFileMapper>
                                            <prefix>helidon-webclient.</prefix>
                                        </org.codehaus.plexus.components.io.filemappers.PrefixFileMapper>
                                    </fileMappers>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>io.helidon.webserver</groupId>
                                    <artifactId>helidon-webserver-cors</artifactId>
                                    <version>${version.test.lib}</version>
                                    <includes>**/config-metadata.json</includes>
                                    <fileMappers>
                                        <org.codehaus.plexus.components.io.filemappers.FlattenFileMapper/>
                                        <org.codehaus.plexus.components.io.filemappers.PrefixFileMapper>
                                            <prefix>helidon-webserver-cors.</prefix>
                                        </org.codehaus.plexus.components.io.filemappers.PrefixFileMapper>
                                    </fileMappers>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>io.helidon.webserver</groupId>
                                    <artifactId>helidon-webserver</artifactId>
                                    <version>${version.test.lib}</version>
                                    <includes>**/config-metadata.json</includes>
                                    <fileMappers>
                                        <org.codehaus.plexus.components.io.filemappers.FlattenFileMapper/>
                                        <org.codehaus.plexus.components.io.filemappers.PrefixFileMapper>
                                            <prefix>helidon-webserver.</prefix>
                                        </org.codehaus.plexus.components.io.filemappers.PrefixFileMapper>
                                    </fileMappers>
                                </artifactItem>
                            </artifactItems>
                            <outputDirectory>${project.build.directory}/test-classes/metadata</outputDirectory>
                            <overWriteReleases>true</overWriteReleases>
                            <overWriteSnapshots>true</overWriteSnapshots>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>